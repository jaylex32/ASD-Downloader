<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
	<UseWindowsForms>true</UseWindowsForms>
	<ApplicationIcon>video_24024.ico</ApplicationIcon>
	<PackageId>ASD</PackageId>
	  <PublishSingleFile>true</PublishSingleFile>
	  <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
	  <RuntimeIdentifier>win-x64</RuntimeIdentifier>
	  <!-- Adjust this based on your target platform -->
	  <SelfContained>true</SelfContained>
	  <AssemblyName>ASD Downloader</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="download.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="video_24024.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="download.png" />
  </ItemGroup>

</Project>
